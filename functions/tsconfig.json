{
  "extends": "../tsconfig.json",
  "references": [
    {
      "path": "../common"
    }
  ],
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
